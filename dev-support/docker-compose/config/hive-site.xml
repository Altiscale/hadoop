<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>hive.querylog.location</name>
    <value>/var/log/hive</value>
  </property>
  <property>
    <name>hive.exec.local.scratchdir</name>
    <value>/tmp/hive/scratch</value>
  </property>
  <!-- HIVE SERVER 2 -->
  <property>
    <name>hive.server2.authentication</name>
    <value>KERBEROS</value>
  </property>
  <property>
    <name>hive.server2.authentication.kerberos.principal</name>
    <value>root/hive.hadoop@HADOOP</value>
  </property>
  <property>
    <name>hive.server2.authentication.kerberos.keytab</name>
    <value>/var/lib/krb5kdc/root.keytab</value>
  </property>
  <property>
    <name>hive.server2.thrift.bind.host</name>
    <value>hive.hadoop</value>
  </property>
  <property>
    <name>hive.server2.thrift.sasl.qop</name>
    <value>auth</value>
    <description>Sasl QOP value; one of 'auth', 'auth-int' and 'auth-conf'</description>
  </property>
  <property>
    <name>hive.server2.enable.impersonation</name>
    <description>Enable user impersonation for HiveServer2</description>
    <value>true</value>
  </property>

  <!-- Add custom authentication class for hiveserver2 -->
  <property>
    <name>hive.server2.kerberos.custom.authentication.SSL.used</name>
    <value>false</value>
  </property>
  <property>
    <name>hive.server2.kerberos.custom.authentication.ssl.keystore.path</name>
    <value>/etc/hadoop/cxfca.jks</value>
  </property>
  <property>
    <name>hive.server2.kerberos.custom.authentication.ssl.keystore.password</name>
    <value>password</value>
  </property>
  <property>
    <name>hive.server2.kerberos.custom.authentication.min.worker.threads</name>
    <value>5</value>
  </property>
  <property>
    <name>hive.server2.kerberos.custom.authentication.max.worker.threads</name>
    <value>500</value>
  </property>
  <property>
    <name>hive.server2.kerberos.custom.authentication.port</name>
    <value>10010</value>
  </property>
  <property>
    <name>hive.server2.kerberos.custom.authentication.used</name>
    <value>true</value>
  </property>

  <!-- HIVE METASTORE -->
  <property>
    <name>javax.jdo.option.ConnectionURL</name>
    <value>jdbc:mysql://localhost/metastore?createDatabaseIfNotExist=true</value>
    <description>metadata is stored in a MySQL server</description>
  </property>
  <property>
    <name>javax.jdo.option.ConnectionDriverName</name>
    <value>com.mysql.jdbc.Driver</value>
    <description>MySQL JDBC driver class</description>
  </property>
  <property>
    <name>javax.jdo.option.ConnectionUserName</name>
    <value>hive</value>
    <description>user name for connecting to mysql server</description>
  </property>
  <property>
    <name>javax.jdo.option.ConnectionPassword</name>
    <value>password</value>
    <description>password for connecting to mysql server</description>
  </property>
  <property>
    <name>hive.metastore.sasl.enabled</name>
    <value>true</value>
  </property>
  <property>
    <name>hive.metastore.kerberos.keytab.file</name>
    <value>/var/lib/krb5kdc/root.keytab</value>
  </property>
  <property>
    <name>hive.metastore.kerberos.principal</name>
    <value>root/hive.hadoop@HADOOP</value>
  </property>
  <property>
    <name>hive.metastore.cache.pinobjtypes</name>
    <value>Table,Database,Type,FieldSchema,Order</value>
  </property>
  <property>
      <name>hive.metastore.uris</name>
      <value>thrift://hive.hadoop:9083</value>
  </property>
  <property>
      <name>hive.metastore.try.direct.sql</name>
      <value>true</value>
  </property>
  <property>
      <name>hive.tez.container.size</name>
      <value>-1</value>
  </property>
  <property>
      <name>hive.tez.java.opts</name>
      <value></value>
  </property>
  <property>
      <name>hive.metastore.warehouse.dir</name>
      <value>/tmp/hive</value>
  </property>
  <property>
      <name>hive.metastore.client.socket.timeout</name>
      <value>600</value>
  </property>
  <property>
      <name>hive.warehouse.subdir.inherit.perms</name>
      <value>true</value>
  </property>
  <property>
      <name>hive.stats.autogather</name>
      <value>false</value>
  </property>
  <property>
      <name>hive.session.history.enabled</name>
      <value>false</value>
  </property>
  <!-- Spark TS -->
</configuration>
